<Patch>

  <!-- #region MJobs_PriorityHauling -->

  <Operation Class="XmlExtensions.OptionalPatchExternal">
    <ModClass>ManyJobs.Mod</ModClass>
    <field>MJobs_PriorityHauling</field>
    <caseTrue>

      <Operation Class="PatchOperationReplace">
        <xpath>Defs/WorkTypeDef[defName = "MJobs_PriorityHauling"]/visible</xpath>
        <value>
          <visible>true</visible>
        </value>
      </Operation>

      <Operation Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName = "AIRobot_Hauler"]/race/mechEnabledWorkTypes</xpath>
        <value>
          <li>MJobs_PriorityHauling</li>
        </value>
      </Operation>

      <Operation Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName = "AIRobot_Hauler"]/robotWorkTypes</xpath>
        <value>
          <li>
            <workTypeDef>MJobs_PriorityHauling</workTypeDef>
            <priority>1</priority>
          </li>
        </value>
      </Operation>

    </caseTrue>
  </Operation>

